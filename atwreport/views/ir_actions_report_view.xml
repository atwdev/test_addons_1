<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ir.actions.report -->

    <record id="act_report_xml_view" model="ir.ui.view">
        <field name="name">ir.actions.report.code</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced']" position="inside">
                <separator string="Python Code"/>
                <field name="code" attrs="{'invisible': [('report_type', '!=', 'qweb-pdf')]}" widget="ace" options="{'mode': 'python'}"/>
            </xpath>
        </field>
    </record>

    <record id="inh_act_report_xml_view" model="ir.ui.view">
        <field name="name">ir.actions.report.extended</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="report_extend_bf.inh_act_report_xml_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='report_libreoffice']" position="after">
                <field name="template_based_company" attrs="{'invisible': [('report_libreoffice','!=',True)]}"/>
                <field name="template_id_company" attrs="{'invisible': ['|', ('report_libreoffice','!=',True), ('template_based_company','!=',True)]}"
                       domain="[('mimetype','=','application/vnd.oasis.opendocument.text')]" context="{'form_view_ref': 'base.view_attachment_form'}"/>
            </xpath>
            <xpath expr="//field[@name='template_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('report_libreoffice','!=',True), ('template_based_company','!=',False)], 'required': [('report_libreoffice','=',True), ('template_based_company','=',False)]}</attribute>
                <attribute name="context">{'form_view_ref': 'base.view_attachment_form', 'default_company_id': False}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
